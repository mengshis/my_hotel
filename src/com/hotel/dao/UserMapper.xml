<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.hotel.dao.UserDao">
    <select id="findAll" 
        resultType="com.hotel.entity.User">
        select * from user
    </select>
	 <select id="login"
        parameterType="string"
        resultType="com.hotel.entity.User">
        select * from user where pid=#{pid}
    </select>
    <select id="findById"
        parameterType="int"
        resultType="com.hotel.entity.User">
        select * from user where uid=#{uid}
    </select>
    <select id="findByPid"
        parameterType="string"
        resultType="com.hotel.entity.User">
        select * from user where pid=#{pid}
    </select>
    <insert id="save"
        parameterType="com.hotel.entity.User">
        insert into user values(
            null,
            #{nick_name},
            #{pwd},
            #{real_name},
            #{pid},
            #{phone},
            #{email}
        )
    </insert>
    <update id="update"
        parameterType="com.hotel.entity.User">
        update user set
            nick_name=#{nick_name},
            upwd=#{pwd},
            real_name=#{real_name},
            pid=#{pid},
            phone=#{phone},
            email=#{email}
        where uid=#{uid}
    </update>
    <delete id="delete"
        parameterType="int">
        delete from user
        where uid=#{uid}
    </delete>
</mapper>